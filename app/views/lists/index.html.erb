<div class="banner mb-4" style="background-image: url('https://res.cloudinary.com/dw3ytnmk9/image/upload/v1637587769/ahoew18jkp4qdmn6dtxk.jpg')">
  <h1>Save any kind of movies</h1>
  <p>Create your personal watchlist</p>
</div>

<div class="container mt-4">
  <div class="title d-flex justify-content-between">
    <h3>My lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
  </div>

  <div class="list-cards">
    <% @lists.each do |list| %>
      <div class="list-card" style="background-image: url('<%= cl_image_path list.photo.key %>')">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>
