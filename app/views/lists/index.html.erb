<div class="banner mb-4" style="background-image: url('<%= image_path "https://images.unsplash.com/photo-1616530940355-351fabd9524b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=735&q=80" %>')">
  <h1>Save any kind of movies</h1>
  <p>Create your personal watchlist</p>
</div>

<div class="container mt-4">
  <div class="title d-flex justify-content-between">
    <h3>My lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
  </div>

  <div class="list-cards">
    <% @lists.each do |list| %>
      <div class="list-card" style="background-image: url('<%= image_path list.image_url %>')">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>
