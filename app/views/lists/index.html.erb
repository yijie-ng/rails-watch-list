<div class="banner mb-4" style="background-image: url('https://source.unsplash.com/1600x900/?movie')">
  <h1>Save any kind of movies</h1>
  <p>Create your personal watchlist</p>
</div>

<div class="container mt-4">
  <div class="title d-flex justify-content-between">
    <h3>My lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success" %>
  </div>

  <div class="list-cards">
    <% @lists.each do |list| %>
      <div class="list-card" style="background-image: url('<%= list.image_url %>')">
        <%= link_to list.name, list_path(list) %>
      </div>
    <% end %>
  </div>
</div>
